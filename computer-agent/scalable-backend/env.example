# API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
API_PROVIDER=anthropic  # anthropic, bedrock, vertex

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@postgres:5432/computer_use_db
SQL_DEBUG=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Container Configuration
CONTAINER_MEMORY_LIMIT=2g
CONTAINER_CPU_COUNT=2

# AWS Configuration (for Bedrock)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_SESSION_TOKEN=your_aws_session_token
# AWS_REGION=us-west-2
# AWS_PROFILE=your_aws_profile

# Google Cloud Configuration (for Vertex)
# CLOUD_ML_REGION=your_vertex_region
# ANTHROPIC_VERTEX_PROJECT_ID=your_vertex_project_id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO

# Security (for production)
# SECRET_KEY=your_secret_key_here
# ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Monitoring (optional)
ENABLE_METRICS=false
PROMETHEUS_PORT=9090
